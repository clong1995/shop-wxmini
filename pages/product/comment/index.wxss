page {
    height: 100%;
}

scroll-view {
    height: 100%;
    display: flex;
    flex-direction: column;
}

.block {
    display: flex;
    flex-direction: column;
    padding: 20rpx;
    background: white;
    margin-bottom: 20rpx;
}

.block > .head {
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 30rpx;
}

.block > .head > image {
    width: 50rpx;
    height: 50rpx;
    border-radius: 25rpx;
    margin-right: 20rpx;
}

.block > .prop {
    color: #666;
    padding: 20rpx 0 6rpx 0;
}

.block > .content {
    font-size: 30rpx;
    margin-bottom: 10rpx;
}

.block > .images {
    width: 100%;
    display: grid;
    grid-template-columns: repeat(3,230rpx);
    grid-gap: 10rpx;
}

.block > .images image {
    width: unset;
    height: 230rpx;
    border-radius: 8rpx;
}

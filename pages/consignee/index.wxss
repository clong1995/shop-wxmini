page {
    display: flex;
    flex-direction: column;
    height: 100%;
}

.container {
    flex: 1;
    padding: 20rpx;
    height: 0;
}

.container > .list {
    overflow-y: auto;
    height: 100%;
    background: white;
    border-radius: 20rpx;
    padding: 20rpx;
}

.container > .list > .item {
    display: flex;
    flex-direction: row;
    align-items: center;
    position: relative;
}
.container > .list > .item > .icon {
    flex-shrink: 0;
    width: 70rpx;
    height: 70rpx;
    line-height: 70rpx;
    border-radius: 35rpx;
    text-align: center;
    background: #ffeade;
    color: var(--c1);
}

.container > .list > .item > .content {
    flex: 1;
    margin: 10rpx 20rpx;
    padding: 20rpx 0;
    border-bottom: 2rpx solid #eeeeee;
}

.container > .list > .item > .content > .person {

}

.container > .list > .item > .content > .person > .name {
    font-size: 30rpx;
    font-weight: bold;
    margin-right: 20rpx;
}

.container > .list > .item > .content > .person > .phone {
    color: #666;
}

.container > .list > .item > .content > .addr {
    padding: 10rpx 4rpx 0 4rpx;
}

.container > .list > .item > .edit {
    flex-shrink: 0;
}


.container > .list > .item > .default {
    position: absolute;
    top: 0;
    right: 0;
    pointer-events:none;
}

.footer {
    flex-shrink: 0;
    background: white;
    padding: 20rpx 20rpx env(safe-area-inset-bottom) 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}


.footer > .button {
    height: 70rpx;
    line-height: 70rpx;
    border-radius: 35rpx;
    width: 280rpx;
    text-align: center;
    color: white;
    background: var(--c1);
}

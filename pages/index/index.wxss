/*search-bar*/
page {
    display: flex;
    flex-direction: column;
    height: 100%;
}

search-bar .user {
    width: 100%;
    height: 100%;
}

search-bar .user > .avatar {
    height: 100%;
    flex-shrink: 0;
    margin:0 10rpx;
    position: relative;
}

search-bar .user > .avatar >image{
    border-radius: 50%;
    height: 100%;
}

search-bar .user > .nickName {
    flex: 1;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

/*scroll-view*/
scroll-view {
    flex: 1;
    overflow: auto;
}

/*swiper*/
swiper {
    height: 340rpx;
    margin-top: 30rpx;
}

swiper swiper-item {
    display: flex;
    justify-content: center;
}

swiper swiper-item image {
    border-radius: 10rpx;
    width: 93%;
    height: 270rpx;
}

/*classify*/
.classify {
    width: 100%;
    height: 230rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 20rpx 20rpx 0 20rpx;
}

.classify > .item {
    display: flex;
    flex-direction: column;
    overflow: hidden;
}

.classify > .item > image {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
}

.classify > .item > text {
    text-align: center;
    padding-top: 12rpx;
}

/*waterfall*/
waterfall .item {
    border-radius: 10rpx;
    background-color: white;
}
waterfall .item image {
    width: 100%;
    border-radius: 10rpx;
}

waterfall .item .content {
    height: 80rpx;
    line-height: 40rpx;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    font-size: 28rpx;
    padding: 0 10rpx;
}

waterfall .item .bottom {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    padding: 10rpx;
}

waterfall .item .bottom > .price {
    color: var(--c1);
    font-size: 36rpx;
}

waterfall .item .bottom > .sell {
    color: var(--black45);
}

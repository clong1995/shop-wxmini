page {
    height: 100%;
    display: flex;
    flex-direction: column;
}

.head {
    flex-shrink: 0;
    display: flex;
    flex-direction: row;
    background: white;
    padding: 0 20rpx 10rpx 20rpx;
    align-items: center;
}

.head > .content {
    flex: 1;
    display: flex;
    flex-direction: column;
    height: 100%;
    padding: 0 30rpx;
}

.head > .content > .code {
    color: #00a400;
    font-size: 34rpx;
}

.head > .content > .address {
    font-size: 28rpx;
}

.head > .content > .logistics {
    padding: 10rpx 0;
}

.head > .content > .user {
    font-weight: bold;
}

.head > .receive {
    background: var(--c1);
    color: white;
    padding: 0 20rpx;
    height: 50rpx;
    line-height: 50rpx;
    border-radius: 4rpx;
    flex-shrink: 0;
}

.head > .received {
    color: #cccccc;
}

.head > .comment {
    border: 2rpx solid var(--c1);
    color:var(--c1);
    padding: 0 20rpx;
    height: 50rpx;
    line-height: 50rpx;
    border-radius: 4rpx;
    flex-shrink: 0;
}

scroll-view {
    flex: 1;
    padding: 20rpx 24rpx env(safe-area-inset-bottom) 24rpx;
    color: #666;
    height: 0;
}

scroll-view .line {
    padding: 10rpx 10rpx 20rpx 40rpx;
    margin-left: 20rpx;
    border-left: 2rpx solid #ccc;
    position: relative;
}

scroll-view .line > .circle {
    position: absolute;
    left: -20rpx;
    top: 36rpx;
    width: 40rpx;
    height: 40rpx;
    border: 6rpx solid #ccc;
    border-radius: 50%;
    background: white;
}

scroll-view .line > .content {
    font-size: 28rpx;
}

.empty {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #cccccc;
}

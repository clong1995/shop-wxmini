page, scroll-view {
    height: 100%;
}
.line {
    height: calc(200rpx + 16rpx * 2);
    margin: 16rpx 24rpx;
    padding: 16rpx;
    background: white;
    border-radius: 10rpx;
    display: flex;
    flex-direction: row;
}

.line > image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
    margin-right: 24rpx;
}

.line > .content {
    flex: 1;
    display: flex;
    flex-direction: column;
    height: 200rpx;
}

.line > .content > .title {
    flex: 1;
    font-size: 28rpx;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
}

.line > .content > .bottom {
    height: 74rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.line > .content > .bottom > .price {
    font-size: 32rpx;
    color: var(--c4);
}

